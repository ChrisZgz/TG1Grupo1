<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.Juego">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtJugadorUno"
            android:layout_width="253dp"
            android:layout_height="36dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/fondoboton"
            android:ems="10"
            android:fontFamily="@font/arcade"
            android:hint="Jugador 1"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FFED00"
            android:textColorHint="#8A864D" />

        <EditText
            android:id="@+id/txtJugadorDos"
            android:layout_width="253dp"
            android:layout_height="36dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/fondocampotexto"
            android:ems="10"
            android:fontFamily="@font/arcade"
            android:hint="Jugador 2"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#FFED00"
            android:textColorHint="#8A864D" />

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/fondoboton"
            android:backgroundTint="#000000"
            android:fontFamily="@font/arcade"
            android:text="INICIAR"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>